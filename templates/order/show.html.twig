{% extends 'base.admin.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ order.email }}</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Jméno a příjmení</th>
                <td>{{ order.nameAndSurname }}</td>
            </tr>
            <tr>
                <th>Ulice</th>
                <td>{{ order.street }}</td>
            </tr>
            <tr>
                <th>Město</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>PSČ</th>
                <td>{{ order.zip }}</td>
            </tr>
            <tr>
                <th>Poznámka</th>
                <td>{{ order.note }}</td>
            </tr>
            <tr>
                <th>Celková cena objednávky</th>
                <td>{{ order.totalPrice }}</td>
            </tr>
            <tr>
                <th>Odesláno</th>
                <td>{{ order.submitted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Datum vytvoření</th>
                <td>{{ order.created ? order.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
